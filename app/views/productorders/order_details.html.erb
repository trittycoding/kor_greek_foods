<h2 class="subtitle">User Orders</h2>
<table class="table is-bordered is-striped">
  <thead>
    <tr>
    <th>Order Number</th>
      <th>Created At</th>
      <th>Product</th>
      <th>Unit Cost</th>
      <th>Quantity</th>
      <th>Line Total</th>
    </tr>
  </thead>

  <% @productorders.each do |order| %>
    <tr>
    <% product = Product.find(order.product_id)%>
      <td><%=order.order_id%></td>
      <td><%=order.created_at%></td>
      <td><%=product.name%></td>
      <td><%=order.unitcost%></td>
      <td><%=order.quantity%></td>
      <td><%=(order.quantity*order.unitcost).round(2)%></td>
    </tr>
  <%end%>
</table>
