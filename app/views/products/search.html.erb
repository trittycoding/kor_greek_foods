<h1 class="title"><%= @search_results.count%> Products Found</h1>

<%= render partial: "product_search"%>

<% if @search_results.count >= 2 %>
    <% @search_results.each_slice(4).to_a.each do |products|%>
      <div class="columns">
        <% products.each do |product|%>
          <div class="column is-one-quarter">
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= image_tag product.image if product.image.attached?%>
                </figure>
              </div>
              <div class="card-content">
                <h4><%= link_to product.name, product%></h4>
                <p><%= number_to_currency product.price %></p>
              </div>
            </div>
          </div>
        <% end %>
    </div>
<%end%>

  <% else %>
  <% @search_results.each do |product| %>
    <div class="columns">
      <div class="column is-one-quarter">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag product.image if product.image.attached?%>
            </figure>
          </div>
          <div class="card-content">
            <h4><%= link_to product.name, product %></h4>
            <p><%= number_to_currency product.price %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>